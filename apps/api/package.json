{
  "name": "__SCOPE__/api",
  "version": "0.0.0",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "build": "tsc",
    "start": "node dist/index.js",
    "lint": "eslint src/",
    "type-check": "tsc --noEmit",
    "db:generate": "prisma generate --schema=src/prisma/schema.prisma",
    "db:migrate": "prisma migrate dev --schema=src/prisma/schema.prisma",
    "db:push": "prisma db push --schema=src/prisma/schema.prisma",
    "db:studio": "prisma studio --schema=src/prisma/schema.prisma",
    "db:seed": "tsx src/prisma/seed.ts"
  },
  "dependencies": {
    "@prisma/client": "^6.1.0",
    "__SCOPE__/business-logic": "workspace:*",
    "__SCOPE__/shared": "workspace:*",
    "compression": "^1.7.5",
    "cors": "^2.8.5",
    "express": "^5.0.1",
    "helmet": "^8.0.0",
    "jsonwebtoken": "^9.0.2",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "__SCOPE__/config": "workspace:*",
    "@types/compression": "^1.7.5",
    "@types/cors": "^2.8.17",
    "@types/express": "^5.0.0",
    "@types/jsonwebtoken": "^9.0.7",
    "@types/node": "^22.10.0",
    "prisma": "^6.1.0",
    "tsx": "^4.19.0",
    "typescript": "^5.7.2"
  }
}
